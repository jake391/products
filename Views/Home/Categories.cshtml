@model ViewModel
<div class="row">
    <div class="col"></div>
    <div class="col">
        <h2 class="text-center">New Category</h2>
        <br>
        <form asp-action="newCategory" method="POST">
            <div class="form-group">
                <label asp-for="Category.name">Name:</label>
                <input asp-for="Category.name" type="text" class="form-control">
                <span asp-validation-for="Category.name"></span>
                <br>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
    <div class="col"></div>
</div>